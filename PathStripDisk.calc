Let ( [
	raw = PathStripPrefix ( path ) ;
	ready = If ( Left ( raw ; 1 ) â‰  "/" ; "/" ) & raw ;
	stripped = "/" & Substitute ( ready ; Get ( SystemDrive ) ; "" )
	] ;
	If (
		//-- Adjust for cases where disk isn't in path (e.g., hosted file)
		Left ( stripped ; 2 ) = "//" ; Right ( stripped ; Length ( stripped ) - 1 ) ;
		stripped
	)
)

