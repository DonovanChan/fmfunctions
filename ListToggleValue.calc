---------------------------------------------------------------------------------------*/

Let([
	_list = listOfValues;
	_string = valueAddOrRemove
	
	];
	
	Case(
		//-- If value exists, remove it
		ValueCount( FilterValues( _list; _string )) > 0;
			list.remove( _list; _string );
			
		//-- Else, append value
		If( IsEmpty( _list ); ""; _list & Â¶ ) & _string
	)

)