Let([
	_name_long = 
		Choose( monthNum;
			"";
			"January";
			"February";
			"March";
			"April";
			"May";
			"June";
			"July";
			"August";
			"September";
			"October";
			"November";
			"December"
		)
	];
	Case(
		shortFormat; Left( _name_long; 3 );
		_name_long
	)
)

