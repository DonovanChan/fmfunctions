Let ( [	win = Abs ( Get ( SystemPlatform ) ) = 2 ;	//-- Remove prefixes	// Use PathStripPrefix. Don't strip "C:" portion of path in windows.	//-- Remove prefixes like "filemac:"	colonPos = Position ( path ; ":" ; 1 ; 1 ) ;	slashPos = Position ( path ; "/" ; 1 ; 1 ) ;	path =		If (			colonPos < slashPos ; Middle ( path ; colonPos + 1 ; 999 ) ;			path		) ;	path =		If (			Left ( path ; 2 ) = "//" ; Middle ( path ; 2 ; 999 ) ;			path		) ;	//-- Add system drive	path = If ( Left ( path ; 1 ) ≠ "/" ; "/" ) & path ;	drive = Get ( SystemDrive ) ;	path = If ( Position ( path ; drive ; 1 ; 1 ) = 0 ; drive ) & path ;	path = Substitute ( path ; "//" ; "/" ) ;	//-- Add 'Volumes' for mounted disks	//path = If ( mac ; "/Volumes" & path )	//-- Add prefix	prefix = If ( win ; "" /*"filewin:"*/ ; "filemac:" )	] ;	Case (		IsEmpty ( path ) ;			"" ;		prefix & path	))/* __________________________________________________NAME:	PathForImport ( path )PURPOSE:	Modifies path to conform to FileMaker's expectations for imports, etc.EXAMPLE:	PathForImport ( "/Users/Admin/Desktop/text.txt" )		// (Mac OS)	= "filemac:/Macintosh HD/Users/Admin/Desktop/text.txt"		// (Windows)	= "/C:/Users/Admin/Desktop/text.txt"HISTORY:	2012-02-12 09:50 PST — Donovan Chandler	2013-01-22 17:20 PST - Donovan Chandler : Remove unnecessary backslashes.	2013-05-07 09:01 PDT - Donovan Chandler : Remove double slashes from path.	2014-05-29 12:41 PDT - Donovan Chandler : Respect colon in file path.*/