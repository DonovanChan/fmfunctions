Let ( [	win = Abs ( Get ( SystemPlatform ) ) = 2 ;	//-- Remove prefixes	// Use PathStripPrefix. Don't strip "C:" portion of path in windows.	posColon = Position ( path ; ":" ; 1 ; 1 ) ;	path = If ( posColon = 0 ; path ; Middle ( path ; posColon + 1 ; 999 ) ) ;	path = If ( Left ( path ; 1 ) ≠ "/" ; "/" ) & path ;	//-- Add system drive	path = If ( Left ( path ; 1 ) ≠ "/" ; "/" ) & path ;	drive = Get ( SystemDrive ) ;	path = If ( Position ( path ; drive ; 1 ; 1 ) = 0 ; drive ) & path ;	//-- Add 'Volumes' for mounted disks	//path = If ( mac ; "/Volumes" & path )	//-- Add prefix	prefix = If ( win ; "" /*"filewin:"*/ ; "filemac:" )	] ;	Case (		IsEmpty ( path ) ;			"" ;		prefix & path	))/* __________________________________________________NAME:	PathForImport ( path )PURPOSE:	Modifies path to conform to FileMaker's expectations for imports, etc.EXAMPLES:	PathForImport ( "/Macintosh HD/Users/Admin/Desktop/text.txt" )		// (Mac OS)	= "filemac:/Macintosh HD/Users/Admin/Desktop/text.txt"		// (Windows)	= "/C:/Users/Admin/Desktop/text.txt"HISTORY:	Created:	2012-02-12 09:50 PT — Donovan Chandler	Modified:	2013-01-22 17:20 PT - Donovan Chandler : Removed unnecessary backslashes.*/