Let ( [
	char = Right ( text ; 1 )
	] ;
	Case (
		char = "¶" ;
			TrimCRRight ( Left ( text ; Length ( text ) - 1 ) ) ;
		text
	)
)

/* —————————————————————————————— //
NAME:
	TrimCRRight ( text )

PURPOSE:
	Trims trailing carriage returns from text.

EXAMPLES:
	TrimCRRight ( "¶¶foo¶¶" ) = "¶¶foo"

HISTORY:
	Created: 2011-Oct-31 14h41 PST — Donovan A. Chandler
*/