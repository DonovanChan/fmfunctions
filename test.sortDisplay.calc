Let([
  _field = fieldName;
  _isDescending = isDescending;

  _table = ExtractTableName ( _field );
  _index = TableIndex( _table );
  _sort_field = GetRepetition( sortedFieldName; _index );
  _sort_desc = GetRepetition( sortedDescending; _index )
  ];
  Case(
    _field = _sort_field and
    _sort_desc = GetAsBoolean( _isDescending );
      1
  )
)

