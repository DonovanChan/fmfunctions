Let ( [
	br = "</br>"
	] ;
	Substitute (
		text ;
		[ Char ( 10 )	; br ] ;	// Line feed
		[ Char ( 11 )	; br ] ;	// Vertical tab
		[ Char ( 12 )	; br ] ;	// Form feed
		[ Char ( 13 )	; br ] 	// Carriage return
	)
)

