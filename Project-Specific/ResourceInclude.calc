Let ( [
  language = FOCUS::RESOURCE_LANGUAGE[index] ;
  text = Case ( not urlOnly ; FOCUS::RESOURCE_TEXT[index] ) ;
  url = Case ( urlOnly ; FOCUS::RESOURCE_URL[index] )
  ] ;
  Case (
    language = "CSS" ;
      Case ( 
        urlOnly ; 
          "<link rel=\"stylesheet\" type=\"text/css\" href='" & PathEncodeForWebViewer ( url ) & "'></link>" ;
        "<style type=\"text/css\">¶" & text & "¶</style>"
      ) ;

    language = "JavaScript"  
      Case ( 
        urlOnly ; 
          "<script src='" & PathEncodeForWebViewer ( url ) & "'></script>" ;
        "<script type=\"text/javascript\">¶" & text & "¶</script>"
      )
  )
)

