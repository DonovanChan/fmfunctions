Let([
	_mac = ( Abs( Get( SystemPlatform ) ) = 1 );
	_path = If( _mac; Substitute( path; " "; "%20"); path );
	_path = Substitute ( _path; ["file://"; "file:/"]; ["file:/";"file://"] )
	];
	_path
)

