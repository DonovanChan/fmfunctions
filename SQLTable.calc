Let ( [
	fieldName = GetFieldName ( field ) ;
	table = Left ( fieldName ; Position ( fieldName ; "::" ; 1 ; 1 ) - 1 )
	];
	Lower ( table )
)

/* —————————————————————————————— //
NAME:
	sqlTable ( field )

PURPOSE:
	Returns name of field's basetable for use in SQL statements.

EXAMPLES:
	SQLTable ( "CONTACT::Name" ) = "contact"

HISTORY:
	Created: 2011-Nov-04 16h45 PST — Donovan Chandler
*/